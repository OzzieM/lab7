    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/stylesheet.css">
</head>
<body style="text-align: center; background-color: rgb(48, 48, 48); color: white;">
  <%- include('partials/nav.ejs') %> 

    <h2>Adding a new quote</h2>

    <form action="/admin/updateQuote/submit">

        Quote:<br>
        <textarea name="quote" id="" cols="50" rows="2"><%= quotes[0].quote %></textarea>
        <br>
        Category:<br>
        <select name="category" id="">
            <% categories.forEach(element => { %>
                <% if (element.category == quotes[0].category) { %>
                    <option value="<%= element.category %>" selected><%= element.category %></option>
                <% } else {%>
                    <option value="<%= element.category %>"><%= element.category %></option>
                <% } %>
                  
            <% }) %>
        </select>
        <br>
        Likes:<br><input type="number" name="likes" value="<%= quotes[0].likes %>"> <br>
        <button name="quoteId" value="<%= quotes[0].quoteId %>" class="btn btn-light" style="margin-top: 1em;">Update Quote</button>
    </form>


    <div>

         
    </div>
</body>
</html>