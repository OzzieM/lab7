<body style="text-align: center; background-color: rgb(48, 48, 48); color: white;">
  <%- include('partials/nav.ejs') %> 

    <h2>Adding a new author</h2>

    <form action="/admin/updateAuthor/submit">
    
        First Name: <br>
        <input type="text" name="firstName" value="<%=author[0].firstName%> "><br>

        Last Name:<br>
        <input type="text" name="lastName" value="<%=author[0].lastName%> "><br>

        Bio:<br>
        <textarea name="biography" id="" cols="30" rows="2"><%=author[0].biography%></textarea>
        <br>
        Sex:<br>
        <input type="radio" name="sex" value="F" 
        <%=(author[0].sex == 'F') ? "checked":"" %> >Female  
        <input type="radio" name="sex" value="M"
        <% if ( author[0].sex  == 'M') { %>
            checked
        <% } %>
        >Male
        <br>
        DOB: <br><input type="date" name="dob" value=<%= datetest[0].dob %>><br>
        DOD: <br><input type="date" name="dod" value=<%= datetest[0].dod %>><br>
        Profession: <br><input type="text" name="profession" value="<%=author[0].profession %>"><br>
        Country: <br><input type="text" name="country" value="<%=author[0].country %>">
        <br>
        
        <button name="authorId" value="<%= author[0].authorId %>" class="btn btn-light" style="margin-top: 1em;">Update Author</button>
    </form>
